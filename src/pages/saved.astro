---
import Layout from "../layouts/Layout.astro";
import ListOfPosts from "../components/ListOfPosts.astro";

const user = await Astro.locals.currentUser();

if (!user) {
  return Astro.redirect("/sign-in")
}

---

<Layout title="Scriptia - Guardados" activeTab="saved">
    <h2 class="text-indigo-400 font-display text-3xl font-bold uppercase">Guardados</h2>
    <p class="text-neutral-500 mb-4">Aqu√≠ puedes ver todas las publicaciones que has guardado.</p>
    <ListOfPosts
      userId={user.id}
      method="saved"
      server:defer
    />
</Layout>
