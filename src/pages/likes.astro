---
import Layout from "../layouts/Layout.astro";
import PostPreview from "../components/PostPreview.tsx";
import { getPostsLikedByUserId } from "../lib/posts";

const user = await Astro.locals.currentUser();

if (!user) {
  return Astro.redirect("/sign-in")
}

const posts = getPostsLikedByUserId(user.id);
---

<Layout title="Scriptia - Me gusta" activeTab="likes">
    <h2 class="text-neutral-300 font-display text-3xl font-bold">ME GUSTA</h2>
    <p class="text-neutral-500 mb-4">Aqu√≠ puedes ver todas las publicaciones que te han gustado.</p>
    {posts.length > 0 ? (
        <div class="flex flex-col gap-2 mt-4">
        {posts.map((post) => (
            <PostPreview post={post} client:visible />
        ))}
        </div>
    ) : (
        <p class="text-neutral-300 text-lg lg:text-xl mt-4">No hay publicaciones que te gusten.</p>
    )}
</Layout>
