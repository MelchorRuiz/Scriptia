---
import Header from "../components/Header.astro";
import { ClientRouter } from 'astro:transitions';
import "../styles/global.css";

interface Props {
  title: string;
  activeTab: string;
}

const { title, activeTab } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/logo-32.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="bg-neutral-900 min-h-dvh">
    <div class="flex justify-center h-full">
      <div class="flex container h-full">
        <Header active={activeTab} />
        <main class="flex-1 my-24 lg:my-0 lg:ml-80 p-4 lg:p-8 overflow-x-hidden">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>

<style>
  html {
    scrollbar-gutter: stable;
  }
</style>