---
import Header from "../components/Header.astro";
import SuggestedContent from "../components/SuggestedContent.astro";
import { Pet } from "../components/Pet";
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";

interface Props {
  title: string;
  activeTab: string;
}

const { title, activeTab } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/logo-32.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="bg-neutral-900 min-h-dvh">
    <div class="flex justify-center h-full">
      <div class="flex container h-full">
        <div class="fixed lg:h-dvh flex justify-between container z-50 pointer-events-none">
          <Header active={activeTab} />
          <SuggestedContent server:defer />
        </div>
        <main
          class="flex-1 my-24 lg:my-0 lg:ml-80 xl:mx-80 p-4 lg:p-8 overflow-x-hidden"
        >
          <slot />
        </main>
      </div>
    </div>
  </body>
  <Pet client:only="react" />
</html>

<style>
  html {
    scrollbar-gutter: stable;
  }
</style>

<script is:inline data-astro-rerun src="https://res.cloudinary.com/veseylab/raw/upload/v1684982764/magicmouse-2.0.0.cdn.min.js"></script>
<script is:inline>
  const options = {
    "outerStyle": "circle",
    "hoverEffect": "circle-move",
    "hoverItemMove": true,
    "defaultCursor": false,
    "outerWidth": 30,
    "outerHeight": 30
  }
</script>
<script is:inline data-astro-rerun>
  magicMouse(options);
</script>